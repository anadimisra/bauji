<%= simple_form_for(@ticket) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :registration_id %>
    <%= f.input :payment_gateway %>
    <%= f.input :payment_gateway_transaction_id %>
    <%= f.input :offer_price %>
    <%= f.input :sale_price %>
    <%= f.input :status %>
    <%= f.association :workshop %>
    <%= f.association :learner %>
    <%= f.association :discount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
