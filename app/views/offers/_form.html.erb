<%= simple_form_for(@offer) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :available_from %>
    <%= f.input :available_to %>
    <%= f.association :discount %>
    <%= f.association :coupon %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
